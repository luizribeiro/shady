public main = 2 + 2 * 5;
public foobar = 3 * (main);

public restart $service = sudo systemctl restart $service;

public create-vm $hostname $id = proxmox-new $hostname $id;

public collect-garbage = {
  nix-collect-garbage --delete-old;
  sudo docker system prune --all --force;
};

public hello-world = {
  print "hello world";
  print (2+2) * 5;
};

public child-processes = {
  echo "hello world";
  ls;
};
